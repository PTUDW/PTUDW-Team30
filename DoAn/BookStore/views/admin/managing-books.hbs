<div class="container padding-width">
    <div class="manager-container">
        <div class="manager-content">
            <div class="tab-content content-managing-items content-wrapper-wide active">
                <div class="content-wrapper">
                    <div class="search-item-wrapper">
                        <input type="text" class="custom-input" placeholder="Typing Book ID or Name">
                        <button class="btn-search">
                            <i class="fa fa-search fa-lg" aria-hidden="true"></i>
                        </button>
                    </div>
                    <div class="add-item-btn">
                        <button class="btn btn--small btn-add">
                            <span>
                                <i class="fa fa-plus" aria-hidden="true"></i> Add book</span>
                        </button>

                    </div>
                </div>
                <table class="table-manager">
                    <thead>
                        <tr>
                            <th>Book Image</th>
                            <th>Book ID</th>
                            <th>Book Name</th>
                            <th>Author</th>
                            <th>Price</th>
                            <th>Amount</th>
                            <th>Option</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each book}}
                        <tr>
                            <td>
                                <center>
                                    <img src="/img/books/{{Image}}" alt="book" width="40px" height="50px">
                                </center>
                            </td>
                            <td>{{Book_ID}}</td>
                            <td>{{Book_Name}}</td>
                            <td>{{Author}}</td>
                            <td>{{Price}}</td>
                            <td>{{Quantity}}</td>
                            <td>
                                <button id="book1" class="btn btn--small btn--orange" data-type="edit"><span><i class="fa fa-pencil" aria-hidden="true"></i> Edit</span></button>
                                <button class="btn btn--small btn--red" data-type="remove"><span><i class="fa fa-trash" aria-hidden="true"></i> Remove</span></button>
                                
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>

                </table>
                <div class="popup-item-add">
                    <div class="popup-box">
                        <i class="fa fa-close close-popup"></i>
                        <div class="outer">
                            <div class="container">
                                <form action="managinng-books" method="POST" role="form">
                                    <label>Book Image</label>
                                    <input type="file" class="custom-input" required="true" name="image">
                                    <hr>
                                    <label>Book Name</label>
                                    <input type="text" class="custom-input" required="true" name="book_Name">
                                    <label>Author</label>
                                    <input type="text" class="custom-input" required="true" name="author">
                                    <label>Publisher</label>
                                    <input type="text" class="custom-input" required="true" name="publisher">
                                    <label>Publish Date</label>
                                    <input type="datetime" class="custom-input" required="true"
                                    name="publish_Date">
                                    <label>Price</label>
                                    <input type="price" class="custom-input" required="true" min="0" name="price">
                                    <label>Quantity</label>
                                    <input type="number" class="custom-input" required="true" min="0" name="quantity">
                                    <label>Description</label>
                                    <input type="text" class="custom-input" required="true" name="description">                   
                                    <label>Kind</label>
                                    <select name="kind_Id" required class="custom-input" id="select1">
                                        {<option value="" selected>1</option>
                                        <option value="">2</option>
                                    </select>
                                    <button type="reset" class="btn"><a href="managing-books">
                                        <span>Add</span>
                                    </a></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="popup-item-edit">
                    <div class="popup-box">
                        <i class="fa fa-close close-popup"></i>
                        <div class="outer">
                            <div class="container">
                                <form action="managing-books" method="POST" role="form">
                                {{#with Book}}
                                    <label>Book Image</label>
                                    <input type="file" class="custom-input" required="true" name="image" value="{{Image}}">
                                    <hr>
                                    <label>Book Name</label>
                                    <input type="text" class="custom-input" required="true" name="book_Name" value="{{Book_Name}}">
                                    <label>Author</label>
                                    <input type="text" class="custom-input" required="true" name="author" value="{{Author}}">
                                    <label>Publisher</label>
                                    <input type="text" class="custom-input" required="true" name="publisher" value="{{Publisher}}">
                                    <label>Publish Date</label>
                                    <input type="datetime" class="custom-input" required="true"
                                    name="publish_Date" value="{{Publish_Date}}">
                                    <label>Price</label>
                                    <input type="price" class="custom-input" required="true" min="0" name="price" value="{{Price}}">
                                    <label>Quantity</label>
                                    <input type="number" class="custom-input" required="true" min="0" name="quantity" value="{{Quantity}}">
                                    <label>Description</label>
                                    <input type="text" class="custom-input" required="true name="description" value="{{Description}}">                   
                                    <label>Kind</label>
                                    <select name="kind_Id" required class="custom-input" id="select1">
                                        <option value="" selected>1</option>
                                        <option value="">2</option>
                                    </select>
                                    <button class="btn"><a href="managing-books"><span>Edit</span></a></button>
                                    {{/with}}
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>