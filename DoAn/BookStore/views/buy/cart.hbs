
<div class="container padding-width">
    <h2 class="align-center">Shopping Cart</h2>
    {{#if showMsg}}
        <h3 style="color: red; text-align: center">{{msg}}</h3>
        {{/if}}
    <form id="frmRemoveItem" method="post" action="/buy/remove" hidden="true">
			<input id="txtProId_R" type="text" name="ProId">
		</form>
        <form action="/buy/order" method="post">
    <table class="cart-table">
        {{#each items}}
        <tr class="container-cart">
            <td class="item-img">
                <img src="/img/books/{{Product.Image}}" alt="book" height="250" width="250">
            </td>
            <td class="item-info">
                <h4 class="item-name">{{Product.Book_Name}}</h4>
                <span class="item-cost">${{Product.Price}}</span>
                <br>
                <span class="qty">Quantity:</span>
                <input type="number" class="qty-input" name="qty" value="{{Quantity}}" required="true" min="1">
                <a data-proid="{{Product.Book_ID}}" class="fa fa-trash-o removeItem" onclick="deleteBook()" role="button">
							<span class="glyphicon glyphicon-remove"></span>
						</a>
            </td>
        </tr>
        {{/each}}
    </table>
    <p class="product-price" style="text-align: center">Total price: ${{total}}</p>
    <button class="btn btn-buy">
        <a href="/buy/order">
            <span>Order Now</span>
        </a>
    </button>
    </form>
    <button class="btn btn-buy">
        <a href="/home/home-customer">
            <span>Continue Shopping</span>
        </a>
    </button>
</div>