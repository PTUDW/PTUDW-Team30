<div class="container padding-width">
    <h2 class="align-center">Please check order infomation</h2>
    <form action="order-success" method="post">
        <div class="row wrapper-order">
            <div class="col-order-1">
                <label for="">Order ID</label>
                <input readonly class="custom-input" type="text" name="orderid" value="1">
                <label for="">Customer ID</label>
                <input readonly class="custom-input" type="text" name="customerid" value="1">
                <label for="">Consignee Name
                    <span class="required-symbol">(*)</span>
                </label>
                <input required class="custom-input" type="text" name="fullname" value="Vo Thi Thanh Truc">
                <label for="">Consignee Phone
                    <span class="required-symbol">(*)</span>
                </label>
                <input required class="custom-input" type="text" name="phone" value="01234567890">
                <label for="">Consignee Address
                    <span class="required-symbol">(*)</span>
                </label>
                <input required class="custom-input" type="text" name="address" value="12, Cong Hoa">
                <label for="">Note</label>
                <textarea rows="4" cols="50" class="custom-input" type="text" name="address"></textarea>
            </div>
            <div class="col-order-2">
                <table class="cart-table">
                    <tr class="container-cart">
                        <td class="item-img">
                            <img src="img/specials-1.png" alt="book">
                        </td>
                        <td class="item-info">
                            <h4 class="item-name">Making</h4>
                            <span class="item-cost">$40</span>
                            <br>
                            <span class="qty">Quantity:</span>
                            <input type="number" class="qty-input" value="1" name="qty" min="1">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </td>
                    </tr>
                    <tr class="container-cart">
                        <td class="item-img">
                            <img src="img/specials-1.png" alt="book">
                        </td>
                        <td class="item-info">
                            <h4 class="item-name">Things</h4>
                            <span class="item-cost">$40</span>
                            <br>
                            <span class="qty">Quantity:</span>
                            <input type="number" class="qty-input" value="1" name="qty" min="1">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </td>
                    </tr>
                    <tr class="container-cart">
                        <td class="item-img">
                            <img src="img/specials-1.png" alt="book">
                        </td>
                        <td class="item-info">
                            <h4 class="item-name">Happen</h4>
                            <span class="item-cost">$40</span>
                            <br>
                            <span class="qty">Quantity:</span>
                            <input type="number" class="qty-input" value="1" name="qty" min="1">
                            <i class="fa fa-trash-o" aria-hidden="true"></i>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
        <div class="row">
            <button class="btn btn-buy btn--orange btn--large">
                <a href="order-success.html">
                    <span>Buy Now</span>
                </a>
            </button>
        </div>
    </form>
</div>